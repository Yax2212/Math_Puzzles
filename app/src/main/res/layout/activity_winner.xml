<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Winner_Activity">
    <LinearLayout
        android:layout_weight="1.25"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/winlevel"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:text="PUZZLE COMPLETED"
            android:textColor="#3F51B5"
            android:textSize="25sp"
            android:textStyle="italic|bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight=".9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/trophy"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/countinue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:layout_marginVertical="10dp"
            android:text="      COUNTINUE      "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:gravity="center"
            android:background="@drawable/cc"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/mainmenu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:layout_marginVertical="10dp"
            android:text="      MAIN MENU      "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:gravity="center"
            android:background="@drawable/cc"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/buypro"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:layout_marginVertical="10dp"
            android:text="          BUY PRO         "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:gravity="center"
            android:background="@drawable/cc"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:layout_marginVertical="10dp"
            android:text="SHARE THIS PUZZLE"
            android:textColor="#3F51B5"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/cc"
            android:padding="7dp"
            android:src="@drawable/shareus" />
    </LinearLayout>

</LinearLayout>